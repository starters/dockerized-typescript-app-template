    "@typescript-eslint/eslint-plugin": "^2.12.0",
    "@typescript-eslint/parser": "^2.12.0",
    "chai": "^4.2.0",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-prettier": "^3.1.2",
    "mocha": "^6.2.2",
    "nodemon": "^2.0.1",
    "prettier": "^1.19.1",
    "rollup": "^1.27.13",
    "rollup-plugin-cleanup": "^3.1.1",
    "rollup-plugin-visualizer": "^3.3.1",
    "ts-node": "^8.5.4",
    "typescript": "^3.7.3"
